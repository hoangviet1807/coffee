---
const { title, products } = Astro.props;
---

<section class="py-16">
  <h2 class="mb-8 text-3xl font-semibold">{title}</h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    {
      products.map((p) => (
        <div class="rounded-lg border p-4">
          <img src={p.image} alt={p.name} class="mb-3 rounded" />
          <h3 class="font-medium">{p.name}</h3>
          <p class="text-sm text-gray-500">${p.price}</p>
        </div>
      ))
    }
  </div>
</section>
